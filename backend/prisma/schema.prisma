generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model Usuario {
  id       Int      @id @default(autoincrement())
  nome     String
  nascto      DateTime
  cpf      String   @unique
  cep         String
  estado   String
  cidade   String   
  endereco String
  telefone   String 
  email       String   @unique
  senha       String  
  pets     Pet[]
}

model Pet {
  id       Int      @id @default(autoincrement())
  nome     String
  especie  String   
  raca     String   
  idade    Int     
  usuario  Usuario? @relation(fields: [usuarioId], references: [id])
  usuarioId Int?   
  vacinas  Vacina[]
}

model Vacina {
  id               Int       @id @default(autoincrement())
  nome             String
  descricao        String
  idadeRecomendada Int
  pet              Pet       @relation(fields: [petId], references: [id])
  petId            Int
  doses            DoseVacina[]
}

model DoseVacina {
  id          Int       @id @default(autoincrement())
  numeroDose  Int       
  intervalo   String   
  vacina      Vacina    @relation(fields: [vacinaId], references: [id])
  vacinaId    Int
}

